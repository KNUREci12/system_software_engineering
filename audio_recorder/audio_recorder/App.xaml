<Application x:Class="audio_recorder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/MainWindow.xaml" ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        
    <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Resources/Themes/Brushes.xaml"/>
            <ResourceDictionary Source="Resources/Themes/Core.xaml"/>
        </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="logo" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource ="/audio_recorder;component/Resources/Images/logo.jpg"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
